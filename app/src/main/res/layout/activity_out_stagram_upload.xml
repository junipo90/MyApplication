<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OutStagramUploadActivity">

    <EditText
            android:id="@+id/content_input"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:hint="내용을 작성해주세요"
            android:gravity="center"/>

    <TextView
            android:id="@+id/view_pictures"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="사진 선택"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:background="#FAFFC5"/>

    <TextView
            android:id="@+id/upload_post"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="업로드"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_margin="3dp"
            android:layout_below="@+id/view_pictures"
            android:background="#C9F9FF"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="전체"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:background="#E0FFE2"
                  android:id="@+id/all_list"
        />


        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="본인"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:background="#D8FFFB"
                  android:id="@+id/my_list"
        />


        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="업로드"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:background="#F6D8E2"
                  android:id="@+id/upload"
        />


        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="정보"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:background="#F1E1C9"
                  android:id="@+id/user_info"
        />


    </LinearLayout>

</RelativeLayout>